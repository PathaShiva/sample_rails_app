<% provide(:title, 'Add Package Update') %>
<h1>Add Package Update</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @package_update,url: "/packages/#{@package.tracker_id}/package_updates", method: :post, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label "Tracking Id" %>
      <input value="<%= @package.tracker_id %>" readonly="true" class='form-control'>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>

      <%= f.submit "Package Update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
