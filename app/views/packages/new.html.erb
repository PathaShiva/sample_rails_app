<% provide(:title, 'Create Package') %>
<h1>Create Package</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @package, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label "Tracking Id" %>
      <%= f.text_field :tracker_id, class: 'form-control',readonly: true %>

      <div style="display: flex">
        <div style="width: 500px;padding: 30px">
          <h4>Sender Address Details</h4>
          <%= f.fields(:sender_address, skip_id: true) do |fields| %>
            <%= fields.label :name %>
            <%= fields.text_field :name, class: 'form-control' %>
    
            <%= fields.label :mobile %>
            <%= fields.text_field :mobile, class: 'form-control' %>
    
            <%= fields.label :district %>
            <%= fields.text_field :district, class: 'form-control' %>
    
            <%= fields.label :state %>
            <%= fields.text_field :state, class: 'form-control' %>
    
            <%= fields.label :country %>
            <%= fields.text_field :country, class: 'form-control' %>
    
            <%= fields.label :pincode %>
            <%= fields.text_field :pincode, class: 'form-control' %>
    
            <%= fields.label :landmark %>
            <%= fields.text_area :landmark, class: 'form-control' %>

          <% end %>

          <%= f.label :sender_email %>
          <%= f.email_field :sender_email, class: 'form-control' %>
        </div>
        <div style="width: 500px;padding: 30px">
         <h4>Receiver Address Details</h4>
          <%= f.fields(:receiver_address, skip_id: true) do |fields| %>
            <%= fields.label :name %>
            <%= fields.text_field :name, class: 'form-control' %>
    
            <%= fields.label :mobile %>
            <%= fields.text_field :mobile, class: 'form-control' %>
    
            <%= fields.label :district %>
            <%= fields.text_field :district, class: 'form-control' %>
    
            <%= fields.label :state %>
            <%= fields.text_field :state, class: 'form-control' %>
    
            <%= fields.label :country %>
            <%= fields.text_field :country, class: 'form-control' %>
    
            <%= fields.label :pincode %>
            <%= fields.text_field :pincode, class: 'form-control' %>
    
            <%= fields.label :landmark %>
            <%= fields.text_area :landmark, class: 'form-control' %>
          <% end %>
          <%= f.label :receiver_email %>
          <%= f.email_field :receiver_email, class: 'form-control' %>
        </div>
      </div>
      
      <%= f.label "Weight of Parcel (in kgs)" %>
      <%= f.text_field :weight_of_parcel, class: 'form-control' %>
      
      <%= f.label :price %>
      <%= f.text_field :cost, class: 'form-control' %>

      <%= f.label :service_type %>
      <%= f.collection_select :service_type_id, ServiceType.all,:id,:name, {include_blank: true},{class: "form-control" }%>

      <%= f.label :status %>
      <%= f.collection_select :status_id, Status.all,:id,:name, {},{class: "form-control",disabled: true }%>

      <%= f.label :payment_mode %>
      <select name="package[payment_mode]" id="package_payment_mode" class="form-control" >
        <option value="COD" selected="selected">COD</option>
        <option value="Prepaid">Prepaid</option>
      </select>
      

      <%= f.submit "Create Package", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
