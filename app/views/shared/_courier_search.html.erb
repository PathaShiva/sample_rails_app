<div class="col-sm-12 col-md-12 col-lg-12">
      <h1 id="page-title" class="orange"> Courier Tracking</h1>
      <div class="well card">
        <fieldset>

        <%= form_with url: "/packages/search", method: :get,local: true do |form| %>
          <div class="form-group">
              <input class="form-control input-lg ng-pristine ng-empty ng-invalid ng-invalid-required ng-touched" type="search" name="tracker_id" autocomplete="off" placeholder="Courier Tracking Number" title="Enter Courier tracking number here." autofocus="" required="">
            </div>
            <div class="form-group mb-0 mob-center">
              <button class="btn btn-info mr-dist" title="Track your package" type="submit"><i class="glyphicon glyphicon-map-marker"></i> Track</button>
            </div>
        <% end %>

        </fieldset>
      </div> 
</div> 
